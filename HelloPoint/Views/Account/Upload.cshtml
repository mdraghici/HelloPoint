@model HelloPoint.Models.UploadFile
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type='text/javascript' src="~/Scripts/UploadPageScript.js"></script>

@using (Html.BeginForm("Upload", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="container-upload container">
        <h2 class="h1-upload">Add new element</h2>

        <label class="label-for-description">Description </label><br />
        <input class="text-success input-text-upload" type="text" name="Description" id="Description" required placeholder="Write here some description!" />
        <input class="btn btn-success" type="hidden" name="UserName" value=@User.Identity.GetUserName() />
        <br />
        <label class="maragin-top-15">
            <input style="display: none;" type="file" name="Files" id="Files" onchange="showFileSize()" accept=".avi, .mpg, .mp4, .mkv, .wmv, .jpg, .bmp, .png, .gif, .ppt, .pptx" required />
            <a class="btn btn-success">Choose a file </a>
        </label>
        <br />
        <label class="limitcolor">Filename :</label>
        <span id="filename"></span>
        <br />
        <label class="maragin-top-15 maragin-button-15 limitcolor">The Limit is 2 Gb you have :</label>
        <span id="limit"></span>
        <br />
        <label id="ppthidden" class="maragin-top-15 limitcolor">PPT Slide Duration :
            <input class="text-success input-text-upload" type="number" name="Slideduration" id="Slideduration" value="5" />
        </label>
        <input class="btn btn-success button-left-upload" type="submit" name="submit" id="submit" value="Save" />
        <button class="btn btn-success button-right-upload" onclick="location.href='@Url.Action("UserManagement", "UserManagement")';return false;">Back</button>

    </div>
}

@Styles.Render("~/Content/Style.css")